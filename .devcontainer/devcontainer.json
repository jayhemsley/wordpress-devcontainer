{
  "name": "Standard Configuration",
  "dockerComposeFile": "docker-compose.yml",
  "service": "wordpress",
  "workspaceFolder": "/workspace",
  "postCreateCommand": "usermod -aG root www-data && bash -c 'if [ -s \"$NVM_DIR/nvm.sh\" ]; then source \"$NVM_DIR/nvm.sh\"; fi && if [ -f .nvmrc ]; then nvm install && nvm use; fi && if [ -f package.json ]; then npm install; fi'",
  "features": {
    "ghcr.io/devcontainers/features/sshd:1": {},
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/node:1": {},
    "ghcr.io/nils-geistmann/devcontainers-features/zsh:0": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "editorconfig.editorconfig",
        "streetsidesoftware.code-spell-checker",
        "dbaeumer.vscode-eslint",
        "chamboug.js-auto-backticks",
        "davidanson.vscode-markdownlint",
        "christian-kohler.path-intellisense",
        "csstools.postcss",
        "esbenp.prettier-vscode",
        "stylelint.vscode-stylelint",
        "bradlc.vscode-tailwindcss"
      ]
    }
  }
}
