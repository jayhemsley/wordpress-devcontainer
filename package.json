{
  "name": "wordpress-devcontainer",
  "version": "0.0.1",
  "description": "Container-based development workflow for WordPress themes and plugins.",
  "author": {
    "name": "Jay Hemsley",
    "email": "jay@hemsley.dev",
    "url": "https://hemsley.dev"
  },
  "bugs": {
    "url": "https://github.com/jayhemsley/wordpress-devcontainer"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jayhemsley/wordpress-devcontainer.git"
  },
  "engines": {
    "node": ">=22",
    "npm": ">=10"
  },
  "dependencies": {
    "bootstrap-icons": "^1.13.1",
    "tailwindcss": "^3.4.17",
    "tailwindcss-3d": "^1.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@prettier/plugin-php": "^0.23.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "autoprefixer": "^10.4.21",
    "browser-sync": "^3.0.4",
    "browser-sync-webpack-plugin": "^2.4.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.32.0",
    "glob": "^11.0.3",
    "husky": "^9.1.7",
    "laravel-mix": "^6.0.49",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "resolve-url-loader": "^5.0.0",
    "sass": "^1.89.2",
    "sass-loader": "^16.0.5",
    "stylelint": "^16.21.1",
    "stylelint-config-recommended": "^16.0.0",
    "stylelint-config-tailwindcss": "^1.0.0"
  },
  "scripts": {
    "dev": "mix",
    "watch": "mix watch",
    "watch-poll": "mix watch -- --watch-options-poll=1000",
    "hot": "mix watch --hot",
    "production": "mix --production",
    "prepare": "husky",
    "pre-commit": "lint-staged",
    "prettier": "prettier --write .",
    "eslint": "eslint --fix .",
    "stylelint": "stylelint --fix .",
    "clean": "rm -rf node_modules && rm -rf dist"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md,yml,php}": [
      "prettier --write"
    ],
    "*.{css,scss}": [
      "prettier --write",
      "stylelint --fix"
    ]
  },
  "prettier": {
    "bracketSameLine": true,
    "jsxSingleQuote": false,
    "singleQuote": true,
    "tabWidth": 2,
    "printWidth": 120,
    "importOrder": [
      "<THIRD_PARTY_MODULES>",
      "^@/.*",
      "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true,
    "importOrderGroupNamespaceSpecifiers": true,
    "plugins": [
      "@trivago/prettier-plugin-sort-imports",
      "prettier-plugin-tailwindcss",
      "@prettier/plugin-php"
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-recommended",
      "stylelint-config-tailwindcss"
    ]
  }
}
